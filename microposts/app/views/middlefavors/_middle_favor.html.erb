<% if current_user.liking?(micropost) %>
  <!-- unlile_button設置 -->
  <%= form_for(current_user.middlefavors.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "Unlike", class: "btn btn-danger btn-block" %>
  <% end %>
<% else %>
  <!-- like_button設置 -->  
  <%= form_for(current_user.middlefavors.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "Like", class: "btn btn-primary btn-block" %>
  <% end %>
<% end %>